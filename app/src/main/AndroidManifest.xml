<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sulistyolabs.footballschedule">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.details.matches.MatchDetails"
            android:theme="@style/AppThemeDefault" />
        <activity
            android:name=".ui.main.BottomNavActivity"
            android:theme="@style/AppThemeNoactionBr">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.details.teams.TeamsDetails"
            android:theme="@style/AppTheme" />
        <activity android:name=".ui.details.player.PlayerDetails" />
        <activity android:name=".ui.search.SearchMatch"></activity>
        <activity android:name=".ui.search.SearchTeam"></activity>
    </application>

</manifest>